{
	"compilerOptions": {
		"lib": ["DOM", "ES2021"],
		"module": "ESNext",
		"jsx": "react",
		"strict": true,
		"declaration": true,
		"skipLibCheck": true,
		"allowImportingTsExtensions": true,
		"noEmit": true,
		"isolatedModules": true,
		"resolveJsonModule": true,
		"moduleResolution": "bundler",
		"useDefineForClassFields": true,
		"baseUrl": ".",
		"paths": {
			"@/src/*": ["./src/*"]
		}
	},
	"include": ["src"]
}
